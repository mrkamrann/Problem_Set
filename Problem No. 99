/*
Link : https://codeforces.com/contest/997/problem/C
*/

#include<iostream>
#define ll long long
using namespace std;

ll pw(ll x, ll y)
{
	ll res = 1;
  ll mod = 998244353;
	for (; y; y >>= 1, x = x * x % mod)
		if(y & 1)
			res = res * x % mod;
	return res;
}

ll f(ll n)
{

	ll ans = pw(3, n * n) - pw(pw(3, n) - 3, n);
  ll mod = 998244353;
	for(ll i = 0, t = 1; i <= n; ++i)
	{
		ll b = pw(3, n - i);
		ll res = t * (pw(b, n) - pw(b - (i ? 1 : 3) + mod, n)) % mod;
		if (i) res = res * 3 % mod;
		ans += i & 1 ? - res : res;
		t = t * (n - i) % mod * pw(i + 1, mod - 2) % mod;
	}
	return (ans % mod + mod) % mod;
}

int main()
{
  ll n;
  cin>>n;
  ll x = f(n);
  cout<<x<<endl;
  return 0;
}
